rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to the list of AI tools
    match /tools/{toolId} {
      allow read: if true;
      allow write: if false; // Nobody can write to the tools collection from the client
    }

    // Allow users to read and write to their own document in the 'users' collection
    // This is used for managing favorites.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow anyone to create contact messages (write only, no read from client)
    match /contact-messages/{messageId} {
      allow create: if true; // Anyone can submit a contact form
      allow read, update, delete: if false; // Only admins via console
    }
  }
}
